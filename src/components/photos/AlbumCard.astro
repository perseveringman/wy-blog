---
const { album } = Astro.props
const { id, title, description, cover_image } = album
---

<div class="bg-white dark:bg-gray-800 rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition-shadow">
  <a href={`/photos/${id}`} class="block">
    <img src={cover_image} alt={title} class="w-full h-48 object-cover" />
    <div class="p-4">
      <h2 class="text-xl font-bold">{title}</h2>
      <p class="text-gray-600 dark:text-gray-300 mt-2">{description}</p>
    </div>
  </a>
</div>
